<%= render '/navigation' %>

<div class="container">
  <div class="row">
    <div class="users-list-container col-md-9">
      <p id="notice"><%= notice %></p>

      <h3>Users</h3>

      <table class="table table-striped table-hover users-table">
        <thead>
        <tr>
          <th>User</th>
          <th>Email</th>
          <th>&nbsp;</th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td>
                <div class="table-cell-inner">
                  <%= link_to image_tag(user.avatar + '?size=36x36', class: "avatar")+content_tag(:div, content_tag(:span, user.nickname, class: "nick-name"), class: "nick-name-wrapper"), user, class: "user-link" %>
                </div>
              </td>
              <td><%= user.email %></td>
              <td>
                <%= link_to '', edit_user_path(user), class: "action edit", data: {toggle: 'tooltip', placement: 'top'}, title: "Edit" %>
                <%= link_to '', user, method: :delete, data: {confirm: 'Are you sure?', toggle: 'tooltip', placement: 'top'}, class: "action delete", title: "Delete" %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New User', new_user_path %>
    </div>
  </div>
</div>