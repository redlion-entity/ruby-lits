<%= render '/navigation' %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>Users</h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nickname</th>
        <th>Email</th>
        <th>Avatar</th>
        <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.nickname %></td>
          <td><%= user.email %></td>
          <td><%= user.avatar %></td>
          <td>
            <%= link_to 'Show', user %> |
            <%= link_to 'Edit', edit_user_path(user) %> |
            <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path %>
</div>