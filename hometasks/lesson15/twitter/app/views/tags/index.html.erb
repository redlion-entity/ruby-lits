<%= render '/navigation' %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>Tags</h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Parent</th>
        <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
          <td><%= tag.parent_id %></td>
          <td>
            <%= link_to 'Show', tag %> |
            <%= link_to 'Edit', edit_tag_path(tag) %> |
            <%= link_to 'Delete', tag, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Tag', new_tag_path %>
</div>